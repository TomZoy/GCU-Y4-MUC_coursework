<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gcu.zoltantompa.geocoral.Settings">

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/magMangebar"
        android:layout_width="match_parent"
        android:layout_height="75dp"

        custom:tickStart="0"
        custom:tickInterval="1"
        custom:tickEnd="100"
        custom:tickColor="@color/ZcolorYellow"

        custom:rangeBarColor ="@color/ZcolorYellow"
        custom:connectingLineColor ="@color/ZcolorYellow"

        custom:pinColor ="@color/ZcolorPrimaryDark"
        custom:selectorColor ="@color/ZcolorPrimaryDark"





        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


    <TextView
        android:text="Min. Magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minMagLabel" />

    <Switch
        android:text="Only show earthquakes in the period below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/LimitPeriodSw"
        android:switchPadding="10dp"
        android:layout_below="@+id/DayNightSw"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/LimitPeriodTo"
        android:layout_marginBottom="22dp"
        android:id="@+id/RadiusFilterValue"
        android:textAlignment="center"
        android:singleLine="true"
        android:selectAllOnFocus="true" />

    <TextView
        android:text="Km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RadiusFilterValue"
        android:layout_toEndOf="@+id/RadiusFilterValue"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView2"
        tools:text="Km" />

    <Switch
        android:text="Only show earthquakes if they were in a radius of kilometers (defined below) to my current location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/RadiusFilterSw"
        android:switchPadding="10dp"
        android:layout_below="@+id/LimitPeriodTo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/debugText"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/LimitPeriodFrom"
        android:layout_alignBottom="@+id/LimitPeriodFrom"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxMag"
        android:entries="@array/magValues"
        android:layout_below="@+id/maxMagLabel"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/magValues"
        android:id="@+id/minMag"
        android:layout_marginStart="54dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/minMagLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_marginTop="14dp"
        android:id="@+id/LimitPeriodFrom"
        android:textAlignment="center"
        android:text="26-15-2016"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:hint="date from"
        android:layout_below="@+id/LimitPeriodSw"
        android:layout_alignParentStart="true"
        android:ems="8"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp" />

    <TextView
        android:text="Max. Magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxMagLabel"
        android:layout_marginStart="42dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/minMag" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="8"
        android:id="@+id/LimitPeriodTo"
        android:textAlignment="center"
        android:text="33-33-3333"
        android:singleLine="true"
        android:hint="date to"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:layout_alignTop="@+id/LimitPeriodFrom"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="Day / Night map modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DayNightSw"
        android:switchPadding="10dp"
        android:textOn="Day"
        android:textOff="Night"
        android:checked="false"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/maxMag"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Min. Significance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minSigLabel"
        android:layout_below="@+id/minMag"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/magValues"
        android:id="@+id/minSig"
        android:textAlignment="textEnd"
        android:layout_below="@+id/minSigLabel"
        android:layout_alignStart="@+id/minMag"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Max. Significance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxSigLabel"
        android:layout_above="@+id/minSig"
        android:layout_alignStart="@+id/maxMagLabel" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxSig"
        android:entries="@array/magValues"
        android:textAlignment="textEnd"
        android:layout_alignBaseline="@+id/minSig"
        android:layout_alignBottom="@+id/minSig"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
