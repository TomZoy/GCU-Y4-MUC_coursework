<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gcu.zoltantompa.geocoral.Settings">

    <Switch
        android:text="Audio signal if earthquake in past 5 mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enableAudio"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:switchPadding="10dp"
        android:splitTrack="false"
        android:checked="false" />

    <Switch
        android:text="Day / Night map modes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enableAudio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/DayNightSw"
        android:switchPadding="10dp"
        android:textOn="Day"
        android:textOff="Night"
        android:checked="false" />

    <Switch
        android:text="Only show earthquakes in the period below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/LimitPeriod"
        android:switchPadding="10dp"
        android:layout_below="@+id/DayNightSw"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/LimitPeriodFrom"
        android:layout_below="@+id/LimitPeriod"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/LimitPeriodFrom"
        android:id="@+id/LimitPeriodTo" />

    <Switch
        android:text="Only show earthquakes if they were in a radius of kilometers (defined below) to my current location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LimitPeriodTo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:id="@+id/RadiusFilter"
        android:switchPadding="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/LimitPeriodTo"
        android:layout_marginBottom="22dp"
        android:id="@+id/RadiusFilterValue"
        android:text="100"
        android:textAlignment="center"
        android:singleLine="true"
        android:selectAllOnFocus="true" />

    <TextView
        android:text="Km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RadiusFilterValue"
        android:layout_toEndOf="@+id/RadiusFilterValue"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView2"
        tools:text="Km" />

</RelativeLayout>
