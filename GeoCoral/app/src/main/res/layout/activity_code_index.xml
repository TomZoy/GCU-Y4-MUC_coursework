<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_code_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gcu.zoltantompa.geocoral.CodeIndex">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/codeListSpinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:text="n/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typicalValuesTextBox"
        android:textAlignment="center"
        android:layout_below="@+id/label1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="n/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTextBox"
        android:textAlignment="center"
        android:layout_below="@+id/label2"
        android:layout_alignParentStart="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <TextView
        android:text="DEBug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/debugTextBox"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label2"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/typicalValuesTextBox"
        android:layout_centerHorizontal="true"
        android:scrollbars = "vertical"
        />

    <TextView
        android:text="Typical Values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/label1"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/codeListSpinner"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
